# Set up auto extension stuff
alias -s html=$BROWSER
alias -s org=$BROWSER
alias -s php=$BROWSER
alias -s com=$BROWSER
alias -s net=$BROWSER
alias -s png=mirage
alias -s jpg=mirage
alias -s gif=mirage
alias -s sxw=soffice
alias -s doc=soffice
alias -s gz=tar -xzvf
alias -s bz2=tar -xjvf
alias -s txt=$EDITOR
#alias -s rb=$EDITOR
alias -s c=$EDITOR


alias xampp='sudo /opt/lampp/lampp'

alias openoffice='soffice'
alias e='leafpad'
alias v='vim -p'
alias svim='sudo vim'
alias vp='vim -p *'
alias ghex='ghex2'

#alias reload='source ~/.zshrc'
alias reload='exec zsh'

alias gemi='sudo gem install'

alias ri='qri'

alias pgrep='pgrep -l'

alias -- -search="yaourt -Ss"
alias -- -install="sudo pacman -S"
alias pacup='sudo pacman -Syu'
alias y="yaourt"
alias yup="yaourt -Syu --aur"

alias o='xdg-open'
alias pdf2='evince'
alias pdf='apvlv'
alias fz='filezilla'
alias ftp='ncftp'

alias pcmanfm-here='pcmanfm --no-desktop "$(pwd)"'

alias cups='sudo /etc/rc.d/cups start'
alias cupss='sudo /etc/rc.d/cups stop'

alias ncmpc='ncmpcpp'
alias inkscap='LC_ALL=C inkscape'
alias clip='xclip -selection clipboard'
alias vid='export LD_PRELOAD=/usr/lib/libv4l/v4l1compat.so'
alias newcheat='rm /home/badboy/.cheat_tasks~'
alias newsake='rm /home/badboy/.sake_tasks~'
alias motd='cat ~/other/motd'

alias quickcam='mplayer tv:// -tv driver=v4l2:width=640:height=480:device=/dev/video0 -fps 15 -vf screenshot'

alias avidemux='avidemux2_qt4'

alias startxi3='startx /usr/bin/i3 -- :1 vt8 -nolisten tcp'

alias gajim-toggle='gajim-remote toggle_roster_appearance'
alias nuzbl='noout uzbl'
alias diff='colordiff'

alias scrn='screen -c ~/.screenrc_i3'
alias perm='/usr/bin/stat --printf "%a %n \n"' # requires a file name e.g. perm file
alias abs='sudo abs'
alias ip='echo -n "intern: ";ifdata -pa eth0;echo -n "extern: ";getip -q'

