alias i3-check="(chpwd(){};cd ~/code/i3/ && echo -n 'i3 git repo: ' && git pull && [ \$(vercmp \$(i3 -v | awk '{print \$3}') \$(git describe --tags --always)) -eq 0 ] && echo 'version up to date' || echo 'version differs')"

alias d='cd'

# readline support in erl shell
alias rerl='rlwrap -a erl'

# seems like gem 1.3.6 ignores dir in home
# -> own config file for 1.8-version
alias gem18='/usr/bin/gem18 --config-file ~/.gemrc18'

# using gatling it's easy to transfer some files
# to windows (using smb) and from windows (using ftp)
alias gatling='sudo /home/badboy/code/gatling/gatling -p 81 -u 1000 -w harmless'

alias raumstatus='curl http://ctdo.de/raumstatus.cgi'

