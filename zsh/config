# using rvm
if [[ -s /home/badboy/.rvm/scripts/rvm ]] ; then source /home/badboy/.rvm/scripts/rvm ; fi

# to access github's code directly
cg() {
    local dir=$(cg.rb $*)
    cd $dir
}

