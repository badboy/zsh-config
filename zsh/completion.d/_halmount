#compdef halmount
compdef _halmount halmount
compdef _halumount halumount
compdef _halmount pmount
compdef _halmount pmount-hal
compdef _halumount pumount

_halmount () {
    if [ $CURRENT -eq 2 ]; then
        #compadd $(find /dev -maxdepth 1 -type b -name "sd*")
        compadd $(halmount -l)
    fi
}

_halumount () {
    if [ $CURRENT -eq 2 ]; then
        #compadd $(mount | grep /media/ | sed 's#.\+\(/media/.\+\) type.*#\1#')
        halumount -l | grep media | cut -d' ' -f'2-' | while read LINE
        do
            compadd "$LINE"
        done
    fi
}
